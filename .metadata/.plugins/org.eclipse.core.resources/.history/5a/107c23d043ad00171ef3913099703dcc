import java.util.Scanner;

public class genderGPA 
{//start class

	public static void main(String[] args)
	{//start main
		// declare input
		String gender;
		double avgGpaM,avgGpaf,gpa,gpaF,gpaM,totalGpaF=0,totalGpaM=0;
		int valid=0,counterM=0,counterF=0;
		//read input
		Scanner input = new Scanner(System.in);
		while(valid==0)
		{
			System.out.print("Enter gender or x to quit: ");
			gender=input.nextLine();
			System.out.print("Enter gpa: ");
			gpa=Double.parseDouble(input.nextLine());
			switch(gender)
			{
			case "f":
			case "F":
				gpaF=gpa;
				totalGpaF=gpaF+totalGpaF;
				counterF++;
				break;
			case "m" :
			case "M" :
				gpaM=gpa;
				totalGpaM=gpaM+totalGpaM;
				counterM++;
				break;
			case "x":
			case "X":
				System.out.println("*");
				valid=1;
			}
		}
		System.out.println(totalGpaF);
		System.out.println(totalGpaM);
		System.out.println(counterF);
		System.out.println(counterM);

	}//end main

}//end class
