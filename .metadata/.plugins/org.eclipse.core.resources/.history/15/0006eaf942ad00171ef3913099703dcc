import java.util.Scanner;

public class genderGPA 
{//start class

	public static void main(String[] args)
	{//start main
		// declare input
		String gender;
		double avgGpaM,avgGpaf,gpa,gpaF,gpaM,totalGpaF=0,totalGpaM=0;
		int valid=0;
		//read input
		Scanner input = new Scanner(System.in);
		while(valid==0)
		{
			System.out.print("Enter gender or x to quit: ");
			gender=input.nextLine();
			System.out.print("Enter gpa: ");
			gpa=Double.parseDouble(input.nextLine());
			switch(gender)
			{
			case "f":
			case "F":
				gpaF=gpa;
				totalGpaF=gpaF+totalGpaF;
				System.out.println(totalGpaF);
				break;
			default:
				System.out.println("*");
				valid=1;
			}
		}
		
		

	}//end main

}//end class
