import java.util.Scanner;

//Jonathan Ko
//assignment 8 problem 2
public class payrollV2
{//start class

	public static void main(String[] args)
	{//start main
		//declare variables
		String [] name=new String[1];
		double [] pay=new double[1];
		//input data
		getData(name,pay);
		
	}//end main
	public static void getData(String[] list,double[] group)
	{//start method
		//declare variables
		int pass=0,numb,hours;
		double rate,;
		//read input
		Scanner input = new Scanner(System.in);
		System.out.print("How many employees? ");
		numb=Integer.parseInt(input.nextLine());
		while(pass==0)
		{//start loop
			if(numb<1)
			{//invalid data
				System.out.print("Invalid, must be at least 1, re-enter: ");
				numb=Integer.parseInt(input.nextLine());
			}
			else
			{
				list= new String[numb];
				group = new double[numb];
				for(int i=0;i<list.length;i++)
				{
					System.out.print("Employee name? ");
					list[i]=input.nextLine();
					System.out.print("Hours worked? ");
					hours=Integer.parseInt(input.nextLine());
					System.out.print("Hourly rate? ");
					rate=Integer.parseInt(input.nextLine());
					group[i]=hours*rate;
				}
			}
		}//end loop
	}//end method
}//end class
