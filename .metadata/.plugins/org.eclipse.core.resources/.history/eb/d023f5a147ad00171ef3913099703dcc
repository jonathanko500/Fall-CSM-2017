import java.util.Scanner;

public class genderGPA 
{//start class
	public static void main(String[] args)
	{//start main
		// declare input
		String gender;
		double avgGpaM,avgGpaF,gpa,gpaF,gpaM,totalGpaF=0,totalGpaM=0;
		int valid=0,counterM=0,counterF=0,verify=0;
		//read input
		Scanner input = new Scanner(System.in);
		while(valid==0)
		{
			System.out.print("Enter gender or x to quit: ");
			gender=input.nextLine();
			if(verify==0)
			{
				System.out.print("Enter gpa: ");
				gpa=Double.parseDouble(input.nextLine());
			
				//figures out what to do for gender
				switch(gender)
				{
				case "f":
				case "F":
					gpaF=gpa;
					totalGpaF=gpaF+totalGpaF;
					counterF++;
					break;
				case "m" :
				case "M" :
					gpaM=gpa;
					totalGpaM=gpaM+totalGpaM;
					counterM++;
					break;
				case "x":
				case "X":
					System.out.println("");
				}
				valid=1;
				}
			
		}
		//calculate avg GPA for both genders
		avgGpaF=totalGpaF/(double)counterF;
		avgGpaM=totalGpaM/(double)counterM;
		//display output
		System.out.println("Average Male GPA: "+avgGpaM);
		System.out.println("Average Feale GPA: "+avgGpaF);
	}//end main
}//end class
