import java.util.Scanner;
//problem 1
public class sevice 
{//start class
	public static void main(String[] args) 
	{//start main
		// declare variable
		int salary, service, sales,serviceBonus;
		double salesBonus,total;
		//read inputs
		Scanner input=new Scanner(System.in);
		System.out.print("Enter monthly base salary:  ");
		salary=Integer.parseInt(input.nextLine());
		System.out.print("Enter years of service:  ");
		service=Integer.parseInt(input.nextLine());
		System.out.print("Enter monthly sales:  ");
		sales=Integer.parseInt(input.nextLine());
		//calculate serviceBonus
		if (service>5)
		{
			serviceBonus=20;
		}
		else
		{
			serviceBonus=10;
		}
		//calaculate salesBonus
		if (sales>=10000)
		{
			salesBonus=sales*0.06;
		}
		else if (sales<5000)
		{
			salesBonus=0;
		}
		else
		{
			salesBonus=sales*0.03;
		}
		//calcutlate total
		total=salary+serviceBonus+salesBonus;
		//display outputs
		System.out.printf("Base pay         $%1.2f%n",salary);
		System.out.printf("Service bonus    $%2.2f%n",serviceBonus);
		System.out.printf("Sales bonus      $%1.2f%n",salesBonus);
		System.out.printf("Total pay        $%1.2f%n",total);
	}//end main
}//end class
