import java.security.SecureRandom;
import java.util.Scanner;

public class mathTutor
{//start class

	public static void main(String[] args)
	{//start main
		//declare variables
		int numb1,numb2,ans,correctAns=0,numerator;
		int correct=0,problems=0,pass=0;
		double score;
		String operator,again;
		//read variables
		Scanner input= new Scanner(System.in);
		//makes num random
		SecureRandom rand = new SecureRandom();
		numb1=1+rand.nextInt(13);
		numb2=1+rand.nextInt(13);
		System.out.println("Welcome to the Math Tutor!");
		do
		{
			System.out.print("Select an operation ( + - / *) : ");
			operator=input.nextLine();
			//operator addition
			if(operator=="+")
			{
				correctAns=numb1+numb2;
				System.out.print(numb1+" + "+ numb2 +" = ");
				ans=Integer.parseInt(input.nextLine());
				if(ans==correctAns)
				{
					System.out.println("That's right");
					correct++;
				}
				else
				{
					System.out.println("The answer is "+correctAns);
				}
			}
			//operator multiply
			else if(operator=="*")
			{
				correctAns=numb1*numb2;
				System.out.print(numb1+" * "+ numb2 +" = ");
				ans=Integer.parseInt(input.nextLine());
				if(ans==correctAns)
				{
					System.out.println("That's right");
					correct++;
				}
				else
				{
					System.out.println("The answer is "+correctAns);
				}
			}
			//operator subtraction
			else if(operator=="-")
			{
				if(numb1>numb2)
				{
					correctAns=numb1-numb2;
					System.out.print(numb1+" - "+ numb2 +" = ");
				}
				else
				{
					System.out.print(numb2+" - "+ numb1 +" = ");
				}
				ans=Integer.parseInt(input.nextLine());
				if(ans==correctAns)
				{
					System.out.println("That's right");
					correct++;
				}
				else
				{
					System.out.println("The answer is "+correctAns);
				}
			}
			//operator division
			else if(operator=="/")
			{
				numerator=numb1*numb2;
				correctAns=numerator/numb2;
				System.out.print(numerator+" / "+ numb2 +" = ");
				ans=Integer.parseInt(input.nextLine());
				if(ans==correctAns)
				{
					System.out.println("That's right");
					correct++;
				}
				else
				{
					System.out.println("The answer is "+correctAns);
				}
			}
			System.out.println("");
			System.out.print("Another problem? ");
			again=input.nextLine();
			again=input.nextLine();
			again=again.toUpperCase();
			switch(again)
			{
			case "Y":
				problems++;
				pass=1;
				break;
			case "N":
				pass=0;
				break;
			}
		}while(pass!=0);
		System.out.println("Programmed by Jonathan Ko");
	}//end main
}//end class
