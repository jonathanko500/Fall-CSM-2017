import java.util.Scanner;

public class Disketts 
{//start class
	public static void main(String[] args) 
	{//start main
		// declare variables
		int disks;
		double total,cent;
		//read variable
		Scanner input=new Scanner(System.in);
		System.out.println("Welcome to Diskettes R Us");
		System.out.println("Order 25 or more and save!");
		System.out.print("How many diskettes do you want to buy? ");
		disks=Integer.parseInt(input.nextLine());
		//calculate total
		if(disks<25)
		{
			cent=0.5;
			total=disks*cent;
		}
		else
		{
			cent=0.3;
			total=disks*cent;
		}
		//display output
		System.out.println(disks+" diskettes at $"+cent+" each");
		System.out.println("Your total is $"+total);
		
	}//end main
}//end class
